<Window x:Class="JOGO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jogo da Velha" Height="550" Width="400"
        ResizeMode="CanMinimize"
        Background="#FFE0E4E7"> <Window.Resources>
        <Style TargetType="Button" x:Key="GameBoardButtonStyle">
            <Setter Property="Background" Value="#FF4CAF50"/> <Setter Property="Foreground" Value="White"/> <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#FF388E3C"/> <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <Style TargetType="Button" x:Key="ActionButtonStyle">
            <Setter Property="Background" Value="#FF333333"/> <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderBrush" Value="#FF222222"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <StackPanel x:Name="modeSelectionPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Escolha o Modo de Jogo" FontSize="28" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center"
                       Foreground="#FF333333"/>
            <Button Content="2 jogadores" Click="PlayAgainstFriend_Click"
                    Style="{StaticResource ActionButtonStyle}"/>
            <Button Content="vs robo" Click="PlayAgainstComputer_Click"
                    Style="{StaticResource ActionButtonStyle}"/>
        </StackPanel>

        <Grid x:Name="mainGameGrid" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="statusTextBlock"
                       Grid.Row="0" Grid.ColumnSpan="3"
                       Text="Vez do Jogador X"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="24" FontWeight="Bold" Margin="0,0,0,10"
                       Foreground="#FF607D8B"/> <Button Grid.Row="1" Grid.Column="0" Name="btn00" Click="Button_Click" Style="{StaticResource GameBoardButtonStyle}"/>
            <Button Grid.Row="1" Grid.Column="1" Name="btn01" Click="Button_Click" Style="{StaticResource GameBoardButtonStyle}"/>
            <Button Grid.Row="1" Grid.Column="2" Name="btn02" Click="Button_Click" Style="{StaticResource GameBoardButtonStyle}"/>

            <Button Grid.Row="2" Grid.Column="0" Name="btn10" Click="Button_Click" Style="{StaticResource GameBoardButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="1" Name="btn11" Click="Button_Click" Style="{StaticResource GameBoardButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="2" Name="btn12" Click="Button_Click" Style="{StaticResource GameBoardButtonStyle}"/>

            <Button Grid.Row="3" Grid.Column="0" Name="btn20" Click="Button_Click" Style="{StaticResource GameBoardButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="1" Name="btn21" Click="Button_Click" Style="{StaticResource GameBoardButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="2" Name="btn22" Click="Button_Click" Style="{StaticResource GameBoardButtonStyle}"/>

            <Button Grid.Row="4" Grid.ColumnSpan="3"
                    Content="Reiniciar Jogo" Click="ReiniciarJogo_Click"
                    Style="{StaticResource ActionButtonStyle}" Margin="0,15,0,0"/>

            <Button Grid.Row="5" Grid.ColumnSpan="3"
                    Content="Voltar ao Menu" Click="VoltarAoMenu_Click"
                    Style="{StaticResource ActionButtonStyle}" FontSize="18" Padding="8" Margin="0,10,0,0"/>

        </Grid>
    </Grid>
</Window>